body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  a
    color: #1C7396
  img
    display: inline-block;
    max-width: 100%;
    height: auto;
  .hammerfont
    font-family: 'Hammersmith One', sans-serif;
  .neck
    margin: 50px 0 0
    padding: 50px 70px 60px 120px
    background: url('../img/itcloud.jpg')
    background-position: center
    h1
      font-size: 55px;
      text-shadow: 3px 7px 1px rgba(0,0,0, 0.2);
    p
      margin-bottom: 15px;
      font-size: 21px;
      font-weight: 200;
  .logobig, .white
    color: #fff !important
  .our-main-content
    border-top: 1px solid #e7e7e7;
    padding-top: 44px;
    .mean-logo
      height:30px;
    &.do-collapse
      #side
        width: 3%;
        .fa-chevron-left
          display: none !important
        .fa-chevron-right
          display: block !important
        .hidden-xs
          display: none
      #content
        width: 97%;
    #side
      border-right: 1px solid #4a4a4a
      position: absolute
      top: 0;
      height: 100%;
      left: 0;
      bottom: 0;
      padding: 10px 0 0 0;
      background-color: #4a4a4a;
      overflow: hidden;
      #topics
        .ui-fancytree
          background-color: #4A4A4A;
          color: white;
          border: none;
        .fancytree-title
          color: white;
          &:hover
            background-color: #6B6B6B;
      //overflow: auto;
      a.collapser
        padding: 16px;
        color: #777;
        float: right;
        .fa-chevron-left
          display: block
        .fa-chevron-right
          display: none
      #site-opts
        position: absolute;
        bottom: 0;
        width: 100%;
      .sidebar-nav
        background-color: #4a4a4a
        padding: 0;
        #side-chat-menu
          height: 490px;
          //overflow-y: scroll;
          overflow: hidden
          position: relative;
          li
            a.chat-selector
              padding: 0 15px 0 0;
              border-bottom: 1px solid #5B5B5B;
              img.msg-avatar
                width: 40px;
                height: 40px;
                border-radius: 0;
              .label-close
                margin: 10px 0;
                display: none
              &:hover .label-close
                display: block
        #side-menu, #side-chat-menu
          a
            color:#fff
            img.msg-avatar
              width: 20px
              height: 20px
              border-radius: 20px
            span.d-item-title
              padding-left: 10px
          li.active
            a
              color:#000
              background: #ccc
              box-shadow: inset 0 0 10px #bebebe 
              text-shadow: 1px 1px #EAEAEA
          a:hover
            color:#000
          a.group
            color:#c1c1c1
            background: #3D3D3D;
            border-bottom: 1px solid #5B5B5B;
    #content
      box-shadow: 2px 0 10px #000;
      position: absolute;
      top: 0;
      //left: 196px;
      bottom: 0;
      right: 0;
      padding: 10px 35px;
      height: 100%;
      overflow: auto;
      h1, h2, h3
        padding-top: 30px;

// Dashboard
.board-container
  margin-top:-20px
  .sidebar-con
    padding-left: 0
    .sidebar-nav
      padding: 20px 0
      & > ul > li
        border-bottom: 1px solid #e7e7e7
      .d-item-title
        padding-left: 10px
.dropdown-menu-bubble-right:before {
  position: absolute;
  top: -7px;
  right: 9px;
  display: inline-block;
  border-right: 7px solid transparent;
  border-bottom: 7px solid #ccc;
  border-left: 7px solid transparent;
  border-bottom-color: rgba(0, 0, 0, 0.2);
  content: '';
}

.dropdown-menu-bubble-right:after {
  position: absolute;
  top: -6px;
  right: 10px;
  display: inline-block;
  border-right: 6px solid transparent;
  border-bottom: 6px solid #ffffff;
  border-left: 6px solid transparent;
  content: '';
}


