extends layout

block content
  .row
    .neck
      #main-carousel.carousel.carousel-bg.slide(data-ride='carousel', data-interval="30000")
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#main-carousel', data-slide-to='0')
          li(data-target='#main-carousel', data-slide-to='1')
        
        // Wrapper for slides
        .carousel-inner(role='listbox')
          .item.active(style="background:url('img/bg-xxx2-full.jpg');")
            .carousel-caption
              h2 #{__("Get Ready")}
              p
                span  $ [sudo] npm install anyandgo-cli
                span  $ anyandgo init my-new-project 
          .item(style="background-image:url(img/neck-gamify-2.jpg);")
            .carousel-caption
              h2 #{__("Innovate")}
              p
                span  $ [sudo] npm install anyandgo-cli
                span  $ anyandgo init my-new-project 
        
        // Controls
        a.left.carousel-control(href='#main-carousel', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
          span.sr-only Previous
        a.right.carousel-control(href='#main-carousel', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
          span.sr-only Next
      
  .row.our-main-content
    .col-sm-10.col-sm-offset-1
          
          .col-sm-8
            .thumbnail
              .caption
                h3 #{__("Install anyandgo")}  
                pre
                  code.language-bash $ [sudo] npm install -g anyandgo-cli 

                h3 Create a new project 
                pre
                  code.language-bash 
                  | $ anyandgo init mynewproject
                  |    You have successfully created the anyandgo project
                  |    Try:
                  |         cd mynewproject
                  |         npm install && bower install && grunt
                h3 #{__("MEAN Framework")}  
                div(style="min-height: 100px;")
                  p Anyandgo let you create blazing fast, scalable web applications using MongoDB, Express, Node.JS and AngularJS. 
                  a.btn.btn-default(href='#', role='button')
                    i.fa.fa-book(style="padding-right:10px")
                    | #{__("Read Docs")}
      
          .col-sm-4
            .thumbnail
              img(src='http://img.youtube.com/vi/Bm8UX97DQCQ/1.jpg', alt='video',style="width:700px;height: 170px;")
              .caption
                h3 #{__("Components")}
